<UserControl x:Class="NiMotion.View.SystemSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             Width="900" >
    <hc:TransitioningContentControl>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Row="0" Rows="1" Columns="1">
                <hc:PropertyGrid Width="500" SelectedObject="{Binding SystemSettingModel}"/>
            </UniformGrid>
            <UniformGrid Grid.Row="1" Columns="2">
                <Button Content="Cancle" Width="100" Click="Button_Cancle_Click" Margin="10,20, 20, 0" HorizontalAlignment="Right"></Button>
                <Button Content="Apply" Width="100" Click="Button_Apply_Click" Margin="20,20, 20, 0" HorizontalAlignment="Left"></Button>
            </UniformGrid>

        </Grid>
    </hc:TransitioningContentControl>
</UserControl>
