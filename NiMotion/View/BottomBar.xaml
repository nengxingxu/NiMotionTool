<UserControl x:Class="NiMotion.View.BottomBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Status}" ></Label>
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Mode}" ></Label>
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Speed}" ></Label>
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Acceleration}"></Label>
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Deceleration}"></Label>
                <Label FontSize="15" Margin="0,0,4,0" Content="{Binding Position}" ></Label>
            </StackPanel>

        </Grid>
    </hc:TransitioningContentControl>
</UserControl>
